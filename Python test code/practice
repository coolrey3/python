

#import moduoles
from tkinter import *
from collections import Counter
import datetime
import xlwt

#current time & date
now = datetime.datetime.now()

#tkinter window
root = Tk()
#tkinter window title
root.title("Programa de Entrada")
#tkinter window size
root.geometry("500x500")


#Entrada Label
entradaLabel = Label(root, text="Entrada")
entradaLabel.grid(row = 2, column = 0, sticky = W,columnspan = 1)

#Total in Label
quantityLabel = Label(root, text="Total In")
quantityLabel.grid(row = 2, column = 2 , sticky = W, columnspan = 1)

#Total Out Label
quantityOutLabel = Label(root, text="Total Out")
quantityOutLabel.grid(row = 2, column = 9 , sticky = W, columnspan = 1)

#Entry Label
entry1Label = Label(root, text="Scan Package:")
entry1Label.grid(row = 1, column = 0 , sticky = W)

#Salida Label
salidaLabel = Label(root, text="Salida")
salidaLabel.grid(row = 2, column = 7 , sticky = E, columnspan = 1)


#save and send buttons
button1 = Button(root,text = 'Save', fg='green')
button2 = Button(root,text = 'Send', fg='red')
#button1.grid(row=3,column=0)
#button2.grid(row = 3 , column = 1)

#Scanner Entry Field
entry1 = Entry(root)
entry1.grid(row = 1,column = 1,columnspan = 5)
entry1.focus_set()

quitButton = Button(root,text="Quit", command = root.quit )
#quitButton.grid(row=1,column=12)



scanIn = []
scanOut = []
startRow = 3
inCount=0
outCount=0

menu = Menu(root)
root.config(menu=menu)
subMenu = Menu(menu)
menu.add_cascade(label="Scan Mode", menu=subMenu)




def entradaMode():
    global mode
    print("Entrada Selected")
    mode = "Entrada"
    select = Label(root, text=" Scan mode:   " + mode, fg='green',width = 17)
    select.grid(row=0, columnspan=2, sticky=W)

def salidaMode():
    print("Salida Selected")
    global mode
    mode = "Salida"
    select = Label(root, text="Scan mode: " + mode, fg='red',width = 17)
    select.grid(row=0, columnspan=2, sticky=W)


subMenu.add_command(label="Entrada", command=entradaMode)
subMenu.add_command(label="Salida", command=salidaMode)
mode = ""


subMenu.add_separator()

def func(event):


    global inCount
    global outCount
    content = entry1.get()


    if content == "":
        print("No Package Scanned")
        print(mode)

    elif mode == "Entrada":
        print( "Package " + content + " Scanned at " + now.strftime("%m-%d-%Y %H:%M"))
        scanIn.append(content)

        startRowIn = 2
        for i in scanIn:
            inLabel = Label(root, text=i)
            inCount += 1
            inLabel.grid_forget()
            startRowIn = startRowIn + 1



        inLabel.grid(sticky=W, column=0,row=startRowIn)
        inCounter = Counter(scanIn)
        inCounter = inCounter.most_common()

        startRow = 3
        for value, count in inCounter:
            stored = value, "-" ,count
            counterLabel = Label(root, text = stored)
            counterLabel.grid(column=2,columnspan = 1,row = startRow, sticky = W)
            startRow = startRow + 1
            print(stored)

        entry1.delete(0, 'end')

    else:
        print( "Package " + content + " Scanned at " + now.strftime("%m-%d-%Y %H:%M"))
        scanOut.append(content)

        startRowOut = 2
        for i in scanOut:
            outLabel = Label(root, text=i)
            outLabel.grid_forget()
            outCount += 1
            startRowOut = startRowOut + 1

        outLabel.grid(sticky=W, column=7,row=startRowOut)
        entry1.delete(0, 'end')



        outCounter = (Counter(scanOut))
        outCounter = outCounter.most_common()

        startRow = 3
        for value, count in outCounter:
            stored = value, "-", count
            counterOutLabel = Label(root, text=stored)
            counterOutLabel.grid(column=9, columnspan=1, row=startRow, sticky=W)
            startRow = startRow + 1
            print(stored)

        print(outCounter)


        entry1.delete(0, 'end')





    #inCounter = Counter(scanIn)
    #inCounter = inCounter.most_common()
 #   for value, count in inCounter:

  #       print(value, count)


   # totalInLabel = Label(root, text=inCounter)
  #  totalInLabel.grid(row= 3, column = 8)

entradaMode()
root.bind('<Return>', func)



root.mainloop()