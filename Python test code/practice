

#import moduoles
from tkinter import *
from collections import Counter
import datetime
import xlwt

#current time & date
now = datetime.datetime.now()

#tkinter window
root = Tk()
#tkinter window title
root.title("Programa de Entrada")
#tkinter window size
root.geometry("500x500")


entry1Label = Label(root, text="Scan Package:")
entradaLabel = Label(root, text="Entrada")
salidaLabel = Label(root, text="Salida")
quantityLabel = Label(root, text="Total")

entry1Label.grid(row = 1, column = 0 , sticky = W)
entradaLabel.grid(row = 2, column = 0, sticky = W,columnspan = 1)
salidaLabel.grid(row = 2, column = 5 , sticky = W, columnspan = 1)
quantityLabel.grid(row = 2, column = 7 , sticky = E, columnspan = 1)

button1 = Button(root,text = 'Save', fg='green')
button2 = Button(root,text = 'Send', fg='red')

#button1.grid(row=3,column=0)
#button2.grid(row = 3 , column = 1)

entry1 = Entry(root)
entry1.grid(row = 1,column = 1,columnspan = 5)
entry1.focus_set()

quitButton = Button(root,text="Quit", command = root.quit )
#quitButton.grid(row=1,column=12)



scanIn = []
scanOut = []
startRow = 3
inCount=0
outCount=0

menu = Menu(root)
root.config(menu=menu)
subMenu = Menu(menu)
menu.add_cascade(label="Scan Mode", menu=subMenu)


def salidaMode():
    print("Salida?!")
    mode = "Salida"
    select = Label(root, text="Scan mode: " + mode, fg='red',bg ='white',width = 15)
    select.grid(row=0, columnspan=2, sticky=W)


def entradaMode():
    print("Entrada?!")
    mode = "Entrada"
    select = Label(root, text="Scan mode:   " + mode, fg='green',bg ='white',width = 15)
    select.grid(row=0, columnspan=2, sticky=W)


subMenu.add_command(label="Entrada", command=entradaMode)
subMenu.add_command(label="Salida", command=salidaMode)
mode = ""


subMenu.add_separator()

def func(event):


    global inCount
    global outCount
    content = entry1.get()


    if content == "":
        print("No Package Scanned")

    else:
        print( "Package " + content + " Scanned at " + now.strftime("%m-%d-%Y %H:%M"))
        scanIn.append(content)

        for i in scanIn:
            inLabel = Label(root, text=i)
            inCount += 1
            inLabel.grid_forget()

        inLabel.grid(sticky=W, column=0)
        inCounter = Counter(scanIn)
        inCounter = inCounter.most_common()

        startRow = 3
        for value, count in inCounter:
            stored = value,count
            counterLabel = Label(root, text = stored, width = 35)
            counterLabel.grid(column=7,row = startRow, sticky = E)
            startRow = startRow + 1

            #counterLabel.grid_forget()
            print(stored)

        for i in scanOut:
            outLabel = Label(root, text=i)
            outLabel.grid_forget()
            outCount += 1
            outLabel.grid(sticky=W,row=3, column=5)

    entry1.delete(0, 'end')


    #inCounter = Counter(scanIn)
    #inCounter = inCounter.most_common()
 #   for value, count in inCounter:

  #       print(value, count)


   # totalInLabel = Label(root, text=inCounter)
  #  totalInLabel.grid(row= 3, column = 8)

    outCounter = (Counter(scanOut))




root.bind('<Return>', func)



root.mainloop()